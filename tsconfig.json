{
    "compilerOptions": {
      "target": "esnext",
      "module": "CommonJS",
      "declaration": true,         // 生成 .d.ts 类型声明文件
      "outDir": "./dist",          // 输出目录
      "rootDir": "./src",          // 源代码目录
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test"]
  }